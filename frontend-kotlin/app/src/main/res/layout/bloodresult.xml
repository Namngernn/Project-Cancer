<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#54B6AB"
    tools:context=".BloodResult">

    <Button
        android:id="@+id/button11"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_marginStart="-320dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="#FFFFFF"
        app:icon="@drawable/baseline_keyboard_arrow_left_24"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#54B6AB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="ส่งผลเลือด"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/takephoto"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button12" />

        <Button
            android:id="@+id/button12"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="-180dp"
            android:layout_marginTop="-450dp"
            android:text="เพิ่มรูปภาพ"
            android:textColor="#000000"
            android:textSize="18sp"
            app:backgroundTint="#FFFFFF"
            app:icon="@drawable/baseline_add_circle_outline_24"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#54B6AB"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button13"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="-450dp"
            android:onClick="takePhoto"
            android:text="ถ่ายรูป"
            android:textColor="#000000"
            android:textSize="18sp"
            app:backgroundTint="#FFFFFF"
            app:icon="@drawable/baseline_camera_alt_24"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button12"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#54B6AB"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/button_upload"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:text="ส่ง"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:backgroundTint="#54B6AB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/takephoto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#54B6AB"
                app:backgroundTint="#DFECEA"
                app:iconTint="#54B6AB"
                android:text="หน้าหลัก"
                app:icon="@drawable/baseline_home_24"
                app:iconGravity="textStart" />

            <Button
                android:id="@+id/contact"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#54B6AB"
                app:backgroundTint="#DFECEA"
                app:iconTint="#54B6AB"
                android:text="ติดต่อโรงพยาบาล"
                app:icon="@drawable/baseline_local_hospital_24"
                app:iconGravity="textStart" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
